<% provide(:title, "Log in") %>
<div class="login-box">
<p class= "center"> <%= flash[:notice] if flash[:notice] %> </p>
<h1 class="center">Login</h1>
<br>
<div class="row">
  <div class="login">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <br class="mobile-nav"/>
      <%= f.email_field :email, class: 'form-control email-input' %>
      <br>
      <%= f.label :password %>
      <br class="mobile-nav"/>
      <%= f.password_field :password, class: 'form-control' %>
      <br>
      <%= f.submit "Log In", class: "btn btn-primary", id: "login-btn" %>
    <% end %>
    <br>
    <p>New user? <%= link_to "Sign up now!", new_user_path %></p>
  </div>
</div>
</div>