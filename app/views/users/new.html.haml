%div.signup-box
  %p.center= flash[:notice] if flash[:notice]
  %h1.center Create Your Account
  %h3.center Enter your new account information below.
  <br>
  %div{:class => 'row'}
    %div{:class => 'col-md-6 col-md-offset-3'}
      = form_tag users_path do
      
        = label :user, :username, 'Username'
        = text_field :user, 'username', class: 'form-control', value: flash[:username]
        = label :user, :email, 'E-mail Address'
        = text_field :user, 'email', class: 'form-control', value: flash[:email]
        = label :user, :password, 'Password'
        = password_field :user, 'password', class: 'form-control'
        <br>
        = submit_tag 'Submit', class: 'btn btn-primary'
        